<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="product" type="com.example.halling.raclapp.database.entity.Product"/>
    </data>
    <android.support.constraint.ConstraintLayout android:layout_height="match_parent" android:layout_width="match_parent">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical" android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <android.support.v7.widget.CardView android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/productCardView">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/productName" android:text="@{product.productname}"
                          android:layout_gravity="start"/>
                <Button android:layout_width="20dp" android:layout_height="20dp" android:id="@+id/plusButton"
                        android:text="@string/buttonPlus"/>
                <Button android:layout_width="20dp" android:layout_height="20dp" android:id="@+id/minusButton"
                        android:text="@string/buttonMinus"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</layout>